{% extends "dashboard.html.twig" %}

{% block title %}
Cr√©ation d'un gite
{% endblock %}

{% block body %}

<h1>Ajouter un nouveau gite</h1>

{{ form_start(formGite) }}

<div class="row">
    <div class="col-md-6">
        {{ form_row(formGite.nom) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ form_row(formGite.surface) }}
    </div>
    <div class="col-md-4">
        {{ form_row(formGite.chambre) }}
    </div>
    <div class="col-md-4">
        {{ form_row(formGite.couchage) }}
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        {{ form_row(formGite.description) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {{ form_row(formGite.proprietaire) }}
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        {{ form_row(formGite.equipements) }}
    </div>
</div>
<div class="row">
    <div class="form-group">
        <button type="submit" class="btn btn-primary mb-4">Enregistrer</button>
        <button type="reset" class="btn btn-default mb-4">Annuler</button>
    </div>
</div>

{{ form_end(formGite) }}


{% endblock %}